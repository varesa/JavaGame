<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>fi.dy.esav</groupId>
	<artifactId>JavaGame</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>Java game</name>
	<description>A game made with java</description>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source />
					<target />
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>attached</goal>
						</goals>
						<phase>package</phase>
						<configuration>
							<descriptorRefs>
								<descriptorRef>jar-with-dependencies</descriptorRef>
							</descriptorRefs>
							<archive>
								<manifest>
									<mainClass>fi.dy.esav.JavaGame.JavaGame</mainClass>
								</manifest>
							</archive>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>releaseRepo</id>
			<name>Internal Releases</name>
			<url>http://nexus.esav.dy.fi/nexus/content/repositories/releases</url>
		</repository>
		<repository>
			<id>snapshotRepo</id>
			<name>Internal Snapshots</name>
			<url>http://nexus.esav.dy.fi/nexus/content/repositories/snapshot</url>
		</repository>

	</repositories>

	<dependencies>
		<dependency>
			<groupId>fi.dy.esav</groupId>
			<artifactId>GameEngine</artifactId>
			<version>1.0.9</version>
		</dependency>
	</dependencies>

	<distributionManagement>
		<snapshotRepository>
			<id>snapshotRepo</id>
			<layout>default</layout>
			<url>http://nexus.esav.dy.fi/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
		<repository>
			<id>releaseRepo</id>
			<layout>default</layout>
			<url>http://nexus.esav.dy.fi/nexus/content/repositories/releases/</url>
		</repository>
	</distributionManagement>
</project>